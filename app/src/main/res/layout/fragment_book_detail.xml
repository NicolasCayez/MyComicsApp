<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BookDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_blue"
        android:orientation="vertical">

        <!-- Bandeau DETAIL TOME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:background="@color/custom_beige"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/books_blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDetailTomeTitreBandeau"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/kronika"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:text="@string/BookDetailFragmentTitle"
                android:textColor="@color/custom_blue"
                android:textSize="20sp" />
        </LinearLayout>
        <!-- Body -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_corner_custom_beige"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <!-- Titre tome -->
                    <!-- Numéro tome -->

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etDetailTomeTitre"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_search"
                        android:fontFamily="@font/kronika"
                        android:gravity="center_horizontal"
                        android:text="@string/BookDetailTitle"
                        android:textColor="@color/custom_blue"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDetailTomeNumero"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/kronika"
                                android:text="@string/BookDetailNumber"
                                android:textColor="@color/custom_blue"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etDetailTomeNumero"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:background="#eee"
                                android:ems="10"
                                android:fontFamily="@font/kronika"
                                android:hint="@string/BookDetailNumberHint"
                                android:inputType="number"
                                android:textAlignment="textEnd"
                                android:textColor="@color/custom_blue"
                                android:textColorHint="#999"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetailTomeTitreSerie"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kronika"
                            android:text="@string/SerieLabel"
                            android:textAlignment="textStart"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDetailTomeSerie"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eee"
                                android:fontFamily="@font/kronika"
                                android:hint="@string/SeriePopupAddHint"
                                android:textAlignment="center"
                                android:textColor="@color/custom_blue"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_change_serie"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_change_bleu" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_add_serie"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_add_blue" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_delete_serie"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_delete_blue" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- ISBN -->

                    <!-- Prix éditeur -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDetailTomeISBN"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kronika"
                            android:text="ISBN :"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDetailTomeISBN"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#eee"
                            android:ems="10"
                            android:fontFamily="@font/kronika"
                            android:hint="ISBN"
                            android:inputType="text"
                            android:textAlignment="textEnd"
                            android:textColor="@color/custom_blue"
                            android:textColorHint="#999"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetailTomePrixEditeur"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kronika"
                            android:text="@string/BookDetailEditorPrice"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDetailTomePrixEditeur"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#eee"
                            android:ems="10"
                            android:fontFamily="@font/kronika"
                            android:inputType="number|numberDecimal"
                            android:textAlignment="textEnd"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!-- Valeur actuelle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetailTomeValeurActuelle"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kronika"
                            android:text="@string/BookDetailValue"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDetailTomeValeurActuelle"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#eee"
                            android:ems="10"
                            android:fontFamily="@font/kronika"
                            android:inputType="number|numberDecimal"
                            android:textAlignment="textEnd"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!-- Date édition -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetailTomeDateEdition"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kronika"
                            android:text="@string/BookDetailEditionDate"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDetailTomeDateEdition"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#eee"
                            android:ems="10"
                            android:fontFamily="@font/kronika"
                            android:hint="@string/BookDetailEditionDateHint"
                            android:inputType="datetime|date"
                            android:textAlignment="textEnd"
                            android:textColor="@color/custom_blue"
                            android:textColorHint="#999"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!-- Dédicassé -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetailTomeDedicace"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/kronika"
                            android:text="@string/BookDetailAutograph"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/chkDetailTomeDedicace"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp" />
                        <!--                                        app:buttonTint="@color/custom_blue"            -->
                    </LinearLayout>
                    <!-- Edition spéciale -->
                    <!-- Intitulé édition spéciale -->
                    <!-- Image Tome -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDetailTomeEditionSpeciale"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/kronika"
                                android:text="@string/BookDetailSpecialEdition"
                                android:textColor="@color/custom_blue"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/chkDetailTomeEditionSpeciale"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp" />
                            <!--                                              app:buttonTint="@color/custom_blue"      -->
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDetailTomeEditionSpecialeLibelle"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#eee"
                            android:ems="10"
                            android:fontFamily="@font/kronika"
                            android:hint="@string/BookDetailSpecialEditionHint"
                            android:inputType="text"
                            android:textColor="@color/custom_blue"
                            android:textColorHint="#999"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivDetailTomeImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:src="@drawable/books_blue" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/btnDetailTomeAddImage"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/btn_add_blue" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/btnDetailTomeDeleteImage"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/btn_delete_blue" />
                    </LinearLayout>
                    <!-- Série -->
                    <!-- Boutons Série -->
                    <!-- Liste auteurs -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetailTomeTitreAuteurs"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kronika"
                            android:text="@string/AuthorLabel"
                            android:textAlignment="textStart"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp">

                            <ListView
                                android:id="@+id/lv_book_detail_authors_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:background="#eee"
                                android:fontFamily="@font/kronika"
                                android:nestedScrollingEnabled="true"
                                android:textColor="@color/custom_blue"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_add_author"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_add_blue" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_delete_author"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_delete_blue" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Boutons Auteur -->
                    <!-- Liste éditeurs -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDetailTomeTitreEditeurs"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kronika"
                            android:text="@string/EditorLabel"
                            android:textAlignment="textStart"
                            android:textColor="@color/custom_blue"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_book_detail_editor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eee"
                                android:fontFamily="@font/kronika"
                                android:hint="@string/EditorLabelHint"
                                android:textAlignment="center"
                                android:textColor="@color/custom_blue"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_change_editor"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_change_bleu" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_add_editor"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_add_blue" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_book_detail_delete_editor"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/btn_delete_blue" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Boutons Editeur -->
                </LinearLayout>
                <!-- Boutons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/rounded_corner_custom_beige"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_book_detail_save_book"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/btn_save_blue" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_book_detail_delete_book"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:paddingEnd="15dp"
                        android:src="@drawable/btn_delete_blue" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>