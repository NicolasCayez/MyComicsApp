<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRecyclerView_2lines2col_line1col1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:fontFamily="@font/kronika"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:textColor="?attr/mc_secondary"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRecyclerView_2lines2col_line1col2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/kronika"
            android:textColor="?attr/mc_secondary"
            android:textAlignment="textStart"
            android:textSize="10sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRecyclerView_2lines2col_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kronika"
        android:textAlignment="textStart"
        android:textColor="?attr/mc_secondary"
        android:paddingStart="10dp"
        android:textSize="16sp" />

</LinearLayout>